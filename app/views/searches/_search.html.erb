<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if user_signed_in? %>
        <div class="search_form">
          <%= form_with url: search_path, local: true, method: :get do |f| %>
            <!--　検索内容をwordとしてアクションに送信-->
            <%= f.text_field :word %>
            <!-- 検索したモデルをrangeとしてアクションに送信-->
            <%= f.select :range, options_for_select([['User'], ['Book']]) %>
            <!--　検索方法をsearchとしてアクションに送信　配列の中に２語入れることによって、同じ意味を持たせることができる、表示されるのは前方に記述した文字列-->
            <%= f.select :search, options_for_select([["完全一致","perfect"], ["前方一致","forward"],  ["後方一致","backward"], ["部分一致","partial"]]) %>
            <%= f.submit "検索", class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

